<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aware.plugin.ambient_noise" xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Aware"
        tools:replace="android:icon">

        <service android:name="com.aware.plugin.ambient_noise.Plugin" android:exported="true"/>
        <activity android:name="com.aware.plugin.ambient_noise.Settings" android:exported="true" android:configChanges="keyboardHidden|orientation|screenSize" android:theme="@style/Theme.Aware"/>
        <service android:name="com.aware.plugin.ambient_noise.Plugin$AudioAnalyser" android:exported="true"/>

        <provider android:name="com.aware.plugin.ambient_noise.Provider"
            android:authorities="com.aware.plugin.ambient_noise.provider.ambient_noise" android:writePermission="com.aware.WRITE_CONTEXT_DATA" android:exported="true" android:readPermission="com.aware.READ_CONTEXT_DATA" />
    </application>

</manifest>
